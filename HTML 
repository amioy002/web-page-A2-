function updateUsername90 {
    const params = new URL.SearchParams(window.location.search);
    Const name = params.get("user_Name");
}
if (name) {
    document.getElementById("userName").textContent = name;
    localStorage.SetItem("storedUserName, name");

} else
const stored=LocalStorage.getItem("storedUserName");
if (Stored){
    document.getElementById("userName").textContent = stored;

}
window.onload = function () {
    const savedTheme= localStorage.getItem("preferredTheme");
    document.documentElement.setAttribute("data-theme", savedTheme || "light");

    const now = new Date ();
    const footer = document.querySelector("footer");
    const timePara = document.createElement("p");
    timePara.textContent = "current time and date: " + now.tolocalString();
    footer.appendChild(timepara);

    updateUserName();
};
</script>
